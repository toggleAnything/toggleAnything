{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "react/sort-prop-types": 2,
        "react/jsx-sort-props": 2
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es2020": true,
        "jest": true

    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx"],
                "paths": ["src"]
            },
            "webpack": {
                "config": "config/webpack.local.js"
            }
        }
    }
}